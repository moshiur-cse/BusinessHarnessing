                <h3 style="padding: 40px;">@Html.ActionLink("Upcomming Project", "Index", "ProjectInfoes")</h3> // new AjaxOptions { Confirm = "Are you sure!!!" },OnSuccess = "Loaded", LoadingElementId = "busy-indicator", UpdateTargetId = "" ,HttpMethod = "Post", OnSuccess = "",, Confirm = "Are you sure!!!"
