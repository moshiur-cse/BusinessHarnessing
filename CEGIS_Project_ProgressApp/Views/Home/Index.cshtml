    <div class="col-md-4" style="text-align: center;">
        <div style="background-color: #F2DEDE; -webkit-border-radius: 10px">
            @if (ViewBag.userType == 2 || ViewBag.userType == 4)
            {
                <h3 style="padding: 40px;color:#dddddd">Progress Monitoring</h3>
            }
            else
            {
                <h3 style="padding: 40px;">@Html.ActionLink("Progress Monitoring", "Index", "ProjectInfoes")</h3>
            }
        </div>
    </div>
      
    
    <div class="col-md-4" style="text-align: center">
        <div style="background-color: #DFF0D8; -webkit-border-radius: 10px">
            
            @if (ViewBag.userType == 4 || User.IsInRole("Admin"))
            {
                <h3 style="padding: 40px;">@Html.ActionLink("Report Generation", "Report", "Home")</h3>                
            }
            else
            {
                <h3 style="padding: 40px;color:#dddddd">Report Generation</h3>
            }
        </div>
    </div>

</div>
