@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()


        <ul class="nav navbar-nav navbar-right">

            <li>
                <div class="dropdown" style="padding:10px ">
                    <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" style="background-color: @ViewBag.Color">
                        Hi, @User.Identity.Name
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        @*<li>@Html.ActionLink("Change Password", "Index", "Manage", routeValues: null, htmlAttributes: new {title = "Manage"})</li>*@
                        <li>@Html.ActionLink("Change Password", "ChangePassword", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                        <li style="color: black"><a href="javascript:document.getElementById('logoutForm').submit()">Log Out</a></li>

                    </ul>
                </div>
            <li/>

            @*<li>
                @Html.ActionLink("Hi, " + User.Identity.Name, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li style="color: black"><a href="javascript:document.getElementById('logoutForm').submit()">Log Out</a></li>*@
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">

        @*<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink"})</li>*@

        <li style="color: black">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
